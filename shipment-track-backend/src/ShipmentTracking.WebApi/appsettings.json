{
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "Jwt": {
    "SecretKey": "",
    "Issuer": "ShipmentTrackingAPI",
    "Audience": "ShipmentTrackingClient",
    "AccessTokenMinutes": 15,
    "RefreshTokenDays": 7
  },
  "Resend": {
    "ApiKey": "",
    "FromEmail": "",
    "FromName": "Shipment Tracking"
  },
  "Smtp": {
    "Host": "localhost",
    "Port": 1025,
    "UseSsl": false,
    "FromEmail": "noreply@shipmenttracking.test",
    "FromName": "Shipment Tracking"
  },
  "AdminUser": {
    "Email": "admin@shipmenttracking.local",
    "Password": "Admin123!Password",
    "FirstName": "System",
    "LastName": "Administrator"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000"
    ]
  },
  "Security": {
    "UseHttpsRedirection": false
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] ({SourceContext}) {Message:lj} {Properties}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Information"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  }
}
