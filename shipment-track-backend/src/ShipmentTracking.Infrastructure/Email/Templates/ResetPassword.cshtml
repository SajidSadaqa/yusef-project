@{
    Layout = null;
    var firstName = Model.firstName as string ?? "there";
    var resetUrl = Model.resetUrl as string;
    var resetToken = Model.resetToken as string;
    var userId = Model.userId as string;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Reset your password</title>
    <style>
        body { font-family: Arial, Helvetica, sans-serif; color: #1f2937; }
        .container { max-width: 600px; margin: 0 auto; padding: 24px; background-color: #f9fafb; border-radius: 8px; }
        .button { display: inline-block; padding: 12px 24px; background-color: #f97316; color: #ffffff !important; text-decoration: none; border-radius: 6px; }
        code { background-color: #111827; color: #f9fafb; padding: 4px 6px; border-radius: 4px; }
    </style>
</head>
<body>
    <div class="container">
        <h2>Password reset requested</h2>
        <p>Hello @firstName,</p>
        <p>We received a request to reset the password for your Shipment Tracking account.</p>
        @if (!string.IsNullOrWhiteSpace(resetUrl))
        {
            <p>
                <a class="button" href="@resetUrl">Reset Password</a>
            </p>
            <p>If you cannot click the button, copy and paste this link into your browser:</p>
            <p><code>@resetUrl</code></p>
        }
        else
        {
            <p>Use the token below to reset your password via the API or mobile application:</p>
            <p><code>@resetToken</code></p>
            <p>User Id: <code>@userId</code></p>
        }
        <p>
            If you did not request a password reset, you can safely ignore this email.
        </p>
        <p>Stay secure,<br/>The Shipment Tracking Team</p>
    </div>
</body>
</html>
